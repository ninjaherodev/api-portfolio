{
  "compilerOptions": {
    "target": "es2023",                                 
    // "lib": [],                                        
    // "jsx": "preserve",                               
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                   
    "module": "Node16",                                
    "rootDir": "./src",
    "outDir": "./dist",                                   
    "esModuleInterop": true,                                               
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                                  
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}

